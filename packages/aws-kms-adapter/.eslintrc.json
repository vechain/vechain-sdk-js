{
    "extends": ["../../.eslintrc.json"],
    "rules": {
        "import/no-restricted-paths": [
            "error",
            {
                "zones": [
                    {
                        "target": "./src",
                        "from": [
                            "../core",
                            "../errors",
                            "../ethers-adapter",
                            "../hardhat-plugin",
                            "../logging",
                            "../network",
                            "../rpc-proxy"
                        ],
                        "message": "Please import using @vechain/sdk-<the-module>"
                    }
                ]
            }
        ]
    }
}
