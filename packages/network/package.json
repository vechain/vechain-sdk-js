{
    "name": "@vechainfoundation/vechain-sdk-network",
    "version": "1.0.0",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./dist && tsup src/index.ts --format cjs,esm --dts",
        "lint": "eslint --ext .ts src --ext .ts tests",
        "start-thor-solo": "echo 'Starting thor solo node ...\n' && docker compose up -d --wait && echo '\nThor solo node started'",
        "stop-thor-solo": "docker compose down && echo '\nThor solo node stopped'",
        "test:unit": "rm -rf ./coverageUnit && jest --coverage --coverageDirectory=coverageUnit --group=unit",
        "test:integration:no-solo": "export JEST_INTEGRATION=true; rm -rf ./coverageIntegration && jest --coverage --coverageDirectory=coverageIntegration --group=integration",
        "test:no-solo": "export JEST_INTEGRATION=true; rm -rf ./coverage && jest --coverage --coverageDirectory=coverage --group=integration --group=unit",
        "format": "prettier --write src/**/*.ts tests/**/*.ts",
        "test": "(yarn start-thor-solo && yarn test:integration:no-solo) && (yarn stop-thor-solo) || (yarn stop-thor-solo)",
        "test:integration": "(yarn start-thor-solo && yarn test:no-solo) && (yarn stop-thor-solo) || (yarn stop-thor-solo)"
    },
    "dependencies": {
        "@types/ws": "^8.5.10",
        "@vechainfoundation/vechain-sdk-core": "*",
        "@vechainfoundation/vechain-sdk-errors": "*",
        "axios": "^1.6.2"
    },
    "devDependencies": {
        "ws": "^8.16.0"
    }
}
