{
  "name": "@vechain/sdk-solo-setup",
  "version": "3.0.0-beta.1",
  "description": "VeChain Thor solo blockchain development environment CLI",
  "main": "dist/index.js",
  "license": "MIT",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "solo-setup": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "types",
    "bin",
    "docker-compose.solo.yml",
    "hardhat.config.ts",
    "contracts",
    "cache",
    "artifacts",
    "config.json"
  ],
  "keywords": [
    "vechain",
    "thor",
    "blockchain",
    "development",
    "cli",
    "solo"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsup-node index.ts --format cjs,esm --dts --outDir dist && npx tsup-node scripts/deploy.ts --format cjs,esm --outDir dist",
    "clean": "rm -rf dist node_modules && rm -rf ./dist",
    "dev": "npm run build -- --watch",
    "compile": "npx hardhat compile",
    "deploy-solo": "npx hardhat run dist/deploy.js --network vechain_solo",
    "solo-up": "make solo-up",
    "solo-down": "make solo-down",
    "solo-seed": "yarn build && yarn deploy-solo"
  },
  "dependencies": {
    "@vechain/sdk-hardhat-plugin": "^2.0.4",
    "hardhat": "^2.22.15",
  "@vechain/sdk-network": "^2.0.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/mocha": ">=10.0.9",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.0",
    "typescript": "^5.6.3"
  }
}
