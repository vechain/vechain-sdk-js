{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@http": [
        "./src/http"
      ],
      "@thor/accounts": [
        "./src/thor/accounts"
      ],
      "@thor/blocks": [
        "./src/thor/blocks"
      ],
      "@thor/debug": [
        "./src/thor/debug"
      ],
      "@thor/logs": [
        "./src/thor/logs"
      ],
      "@thor/node": [
        "./src/thor/node"
      ],
      "@thor/subscriptions": [
        "./src/thor/subscriptions"
      ],
      "@thor/transactions": [
        "./src/thor/transactions"
      ],
      "@thor/utils": [
        "./src/thor/utils"
      ],
      "@ws": [
        "./src/ws"
      ]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./tests/**/*.ts",
    "node_modules",
    "dist"
  ]
}