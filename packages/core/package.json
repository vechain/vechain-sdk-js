{
    "name": "@vechain-sdk/core",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "scripts": {
        "build": "rm -rf ./dist && tsup src/index.ts --format cjs,esm --dts",
        "lint": "eslint --ext .ts src --ext .ts tests",
        "test:unit": "rm -rf ./coverageUnit && jest --coverage --coverageDirectory=coverageUnit --group=unit",
        "test": "yarn test:unit && yarn merge-coverage",
        "format": "prettier --write src/**/*.ts tests/**/*.ts",
        "merge-coverage": "rm -rf coverage/* && lcov-result-merger 'coverage*/lcov.info' > coverage/lcov.info"
    },
    "dependencies": {
        "@ethereumjs/rlp": "^5.0.0",
        "@types/elliptic": "^6.4.16",
        "blakejs": "^1.2.1",
        "elliptic": "^6.5.4",
        "ethers": "6.8.0"
    }
}
