{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@*": ["./src/*"],
      "@vcdm": ["./src/vcdm"],
      "@vcdm/*": ["./src/vcdm/*"],
      "@errors": ["./src/errors"],
      "@errors/*": ["./src/errors/*"],
      "@certificate": ["./src/certificate"],
      "@certificate/*": ["./src/certificate/*"],
      "@transaction": ["./src/transaction"],
      "@transaction/*": ["./src/transaction/*"],
      "@hdkey": ["./src/hdkey"],
      "@hdkey/*": ["./src/hdkey/*"],
      "@keystore": ["./src/keystore"],
      "@keystore/*": ["./src/keystore/*"],
      "@cryptography": ["./src/keystore/cryptography"],
      "@cryptography/*": ["./src/keystore/cryptography/*"],
      "@secp256k1": ["./src/secp256k1"],
      "@secp256k1/*": ["./src/secp256k1/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./tsup.config.ts"
  ]
}
