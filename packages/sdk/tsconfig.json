{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@*": ["./src/*"],
      "@clients": ["./src/clients"],
      "@clients/*": ["./src/clients/*"],
      "@http": ["./src/http"],
      "@http/*": ["./src/http/*"],
      "@json": ["./src/json"],
      "@json/*": ["./src/json/*"],
      "@sdk": ["./src/*"],
      "@thor": ["./src/thor"],
      "@thor/*": ["./src/thor/*"],
      "@ws": ["./src/ws"],
      "@ws/*": ["./src/ws/*"],
      "@common": ["./src/common"],
      "@common/*": ["./src/common/*"],
      "@common/errors": ["./src/common/errors"],
      "@common/vcdm": ["./src/common/vcdm"],
      "@common/http": ["./src/common/http"],
      "@common/logging": ["./src/common/logging"],
      "@common/cryptography/secp256k1": ["./src/common/cryptography/secp256k1"],
