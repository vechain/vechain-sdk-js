      "@thor/thorest/json": ["./src/thor/thorest/json"],
      "@thor/thorest/subscriptions/response": ["./src/thor/thorest/subscriptions/response"],
      "@thor/thorest/accounts/response": ["./src/thor/thorest/accounts/response"],
      "@thor/thor-client/model/logs/DecodedEventLog": ["./src/thor/thor-client/model/logs/DecodedEventLog"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./tsup.config.ts"
  ]
}
