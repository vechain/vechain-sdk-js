{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "paths": {
      "@*": ["./src/*"],
      "@clients": ["./src/clients"],
      "@clients/*": ["./src/clients/*"],
      "@http": ["./src/http"],
      "@http/*": ["./src/http/*"],
      "@json": ["./src/json"],
      "@json/*": ["./src/json/*"],
      "@sdk": ["./src/*"],
      "@thor": ["./src/thor"],
      "@thor/*": ["./src/thor/*"],
      "@ws": ["./src/ws"],
      "@ws/*": ["./src/ws/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./tsup.config.ts"
  ]
}
