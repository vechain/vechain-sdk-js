{
    "name": "vechain-sdk",
    "version": "1.0.0",
    "description": "The official JavaScript SDK for vechain",
    "repository": "https://github.com/vechainfoundation/vechain-sdk.git",
    "author": "vechain Foundation",
    "license": "MIT",
    "scripts": {
        "postinstall": "husky install",
        "build": "turbo build",
        "lint": "turbo lint",
        "test": "turbo test && yarn merge-coverage",
        "test:unit": "turbo test:unit",
        "test:integration": "turbo test:integration",
        "format": "turbo format",
        "merge-coverage": "lcov-result-merger 'packages/*/coverage*/lcov.info' > coverage/lcov.info"
    },
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*",
        "docs"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.8.0",
        "@commitlint/config-conventional": "^17.8.0",
        "husky": "^8.0.3",
        "lcov-result-merger": "^4.1.0",
        "turbo": "^1.10.15"
    }
}
