{
    "name": "vechain-sdk",
    "version": "1.0.0",
    "description": "The official JavaScript SDK for vechain",
    "repository": "https://github.com/vechainfoundation/vechain-sdk.git",
    "author": "vechain Foundation",
    "license": "MIT",
    "scripts": {
        "postinstall": "husky install",
        "build": "turbo build",
        "lint": "turbo lint",
        "test": "turbo test --force && yarn merge-coverage",
        "test:unit": "turbo test:unit",
        "test:integration": "turbo test:integration",
        "format": "turbo format",
        "test:examples": "turbo test:examples",
        "merge-coverage": "ts-node scripts/merge-coverage.ts",
        "generate:apidocs": "typedoc --options typedoc.json --logLevel Error",
        "generate:apidocs-debug": "typedoc --options typedoc.json --logLevel Verbose --plugin typedoc-plugin-missing-exports --validation.notDocumented"
    },
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*",
        "docs"
    ],
    "devDependencies": {
        "@commitlint/cli": "^18.2.0",
        "@commitlint/config-conventional": "^18.4.3",
        "@jest/globals": "^29.7.0",
        "@types/fs-extra": "^11.0.4",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^40.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^16.3.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-promise": "^6.0.0",
        "fs-extra": "^11.2.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-docblock": "^29",
        "jest-junit": "^16.0.0",
        "jest-runner": "^29.7.0",
        "jest-runner-groups": "^2.2.0",
        "nyc": "^15.1.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "tsup": "^8.0.1",
        "turbo": "^1.11.0",
        "typedoc": "^0.25.4",
        "typedoc-plugin-missing-exports": "^2.1.0",
        "typescript": "*"
    }
}
