{
    "name": "vechain-sdk",
    "description": "The official JavaScript SDK for vechain",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vechain/vechain-sdk.git"
    },
    "author": "VeChain Foundation",
    "license": "MIT",
    "keywords": [
        "VeChain",
        "thor",
        "sdk",
        "blockchain",
        "dapp",
        "web3"
    ],
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@4.9.4+sha512.7b1cb0b62abba6a537b3a2ce00811a843bea02bcf53138581a6ae5b1bf563f734872bd47de49ce32a9ca9dcaff995aa789577ffb16811da7c603dcf69e73750b",
    "scripts": {
        "start-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-up",
        "stop-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-down",
        "seed-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-seed",
        "postinstall": "husky",
        "build": "turbo build",
        "check:circular-dependencies": "turbo check:circular-dependencies",
        "pre-release": "ts-node scripts/pre-release.ts",
        "generate:apidocs": "typedoc --options typedoc.json --logLevel Error",
        "generate:apidocs-debug": "typedoc --options typedoc.json --logLevel Verbose --plugin typedoc-plugin-missing-exports --validation.notDocumented",
        "lint": "turbo lint",
        "format": "turbo format",
        "test:unit": "turbo test:unit",
        "test:integration": "turbo test:integration",
        "test:integration:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test:integration && yarn stop-thor-solo) || yarn stop-thor-solo",
        "test:clients": "yarn workspace @vechain/sdk test:clients",
        "test:clients:solo": "yarn workspace @vechain/sdk test:clients:solo",
        "test:examples": "turbo test:examples",
        "test:examples:solo": "(yarn start-thor-solo && yarn test:examples && yarn stop-thor-solo) || yarn stop-thor-solo",
        "test": "turbo test --force --filter='@vechain/sdk'",
        "test:browser": "turbo test:browser --force && yarn merge-coverage",
        "test:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test && yarn stop-thor-solo) || yarn stop-thor-solo",
        "test:browser:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test:browser && yarn stop-thor-solo) || yarn stop-thor-solo",
        "merge-coverage": "ts-node scripts/merge-coverage.ts",
        "check:tests-naming": "ts-node scripts/check-tests-naming.ts"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.7",
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "19.8.1",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.35.0",
        "@jest/globals": "29.7.0",
        "@types/fs-extra": "11.0.4",
        "eslint": "8.57.1",
        "eslint-config-prettier": "9.1.2",
        "eslint-config-standard-with-typescript": "43.0.1",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-local-rules": "3.0.2",
        "eslint-plugin-n": "17.21.3",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-promise": "7.2.1",
        "eslint-plugin-security": "3.0.1",
        "eslint-plugin-sonarjs": "2.0.2",
        "fs-extra": "11.3.1",
        "glob": "10.4.5",
        "globals": "15.15.0",
        "hardhat": "2.26.3",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "jest-docblock": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-junit": "16.0.0",
        "jest-runner": "29.7.0",
        "jest-runner-groups": "2.2.0",
        "nyc": "17.1.0",
        "pkg": "5.8.1",
        "prettier": "3.6.2",
        "ts-jest": "29.4.1",
        "tsup": "8.5.0",
        "turbo": "2.5.6",
        "typedoc": "0.26.11",
        "typedoc-plugin-missing-exports": "3.1.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.16.0"
    },
    "peerDependencies": {
        "hardhat": "2.26.3"
    },
    "resolutions": {
        "cross-spawn": "7.0.6",
        "undici": "5.29.0"
    },
    "version": "1.22.22"
}
