{
    "name": "vechain-sdk",
    "version": "1.0.0",
    "description": "The official JavaScript SDK for vechain",
    "repository": "https://github.com/vechainfoundation/vechain-sdk.git",
    "author": "vechain Foundation",
    "license": "MIT",
    "scripts": {
        "postinstall": "husky install",
        "build": "turbo build",
        "lint": "turbo lint",
        "test": "turbo test && yarn merge-coverage",
        "test:unit": "turbo test:unit",
        "test:integration": "turbo test:integration",
        "format": "turbo format",
        "test:docs": "turbo test:docs",
        "test:examples": "turbo test:examples",
        "merge-coverage": "lcov-result-merger 'packages/*/coverage*/lcov.info' > coverage/lcov.info"
    },
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*",
        "docs"
    ],
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard-with-typescript": "^39.1.1",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-promise": "^6.0.0",
        "jest": "^29.7.0",
        "jest-runner": "^29.7.0",
        "jest-docblock": "^24",
        "jest-runner-groups": "^2.2.0",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "tsup": "^7.2.0",
        "typescript": "*",
        "@commitlint/cli": "^18.1.0",
        "@commitlint/config-conventional": "^18.1.0",
        "husky": "^8.0.3",
        "lcov-result-merger": "^4.1.0",
        "turbo": "^1.10.15"
    }
}
