{
    "name": "vechain-sdk",
    "description": "The official JavaScript SDK for vechain",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vechain/vechain-sdk.git"
    },
    "author": "VeChain Foundation",
    "license": "MIT",
    "keywords": [
        "VeChain",
        "thor",
        "sdk",
        "blockchain",
        "dapp",
        "web3"
    ],
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "packageManager": "yarn@4.9.4+sha512.7b1cb0b62abba6a537b3a2ce00811a843bea02bcf53138581a6ae5b1bf563f734872bd47de49ce32a9ca9dcaff995aa789577ffb16811da7c603dcf69e73750b",
    "scripts": {
        "start-thor-solo": "corepack yarn workspace @vechain/sdk-solo-setup solo-up",
        "stop-thor-solo": "corepack yarn workspace @vechain/sdk-solo-setup solo-down",
        "seed-thor-solo": "corepack yarn workspace @vechain/sdk-solo-setup solo-seed",
        "postinstall": "husky",
        "build": "turbo build",
        "check:circular-dependencies": "turbo check:circular-dependencies",
        "pre-release": "corepack yarn exec ts-node scripts/pre-release.ts",
        "generate:apidocs": "typedoc --options typedoc.json --logLevel Error",
        "generate:apidocs-debug": "typedoc --options typedoc.json --logLevel Verbose --plugin typedoc-plugin-missing-exports --validation.notDocumented",
        "lint": "turbo lint",
        "format": "turbo format",
        "test:node:unit": "turbo test:node:unit",
        "test:node:solo": "turbo test:node:solo",
        "test:browser:unit": "turbo test:browser:unit",
        "test:browser:solo": "turbo test:browser:solo",
        "test:node:testnet": "turbo test:node:testnet",
        "test:node:mainnet": "turbo test:node:mainnet",
        "test:browser:testnet": "turbo test:browser:testnet",
        "test:browser:mainnet": "turbo test:browser:mainnet",
        "test:node:unit:e2e": "turbo test:node:unit:e2e",
        "test:node:solo:e2e": "turbo test:node:solo:e2e",
        "test:browser:unit:e2e": "turbo test:browser:unit:e2e",
        "test:browser:solo:e2e": "turbo test:browser:solo:e2e",
        "test:node:testnet:e2e": "turbo test:node:testnet:e2e",
        "test:node:mainnet:e2e": "turbo test:node:mainnet:e2e",
        "test:browser:testnet:e2e": "turbo test:browser:testnet:e2e",
        "test:browser:mainnet:e2e": "turbo test:browser:mainnet:e2e",
        "test:node": "turbo test:node",
        "test:browser": "turbo test:browser",
        "test:node:e2e": "turbo test:node:e2e",
        "test:browser:e2e": "turbo test:browser:e2e",
        "merge-coverage": "corepack yarn exec ts-node scripts/merge-coverage.ts",
        "check:tests-naming": "corepack yarn exec ts-node scripts/check-tests-naming.ts",
        "count-quarantine": "grep -r '@group quarantine' packages/sdk/tests/ --include='*.test.*' | wc -l",
        "list-quarantine": "grep -r '@group quarantine' packages/sdk/tests/ --include='*.test.*'",
        "build-examples": "chmod +x ./scripts/build-examples.sh && ./scripts/build-examples.sh",
        "run-examples": "chmod +x ./scripts/run-examples.sh && ./scripts/run-examples.sh",
        "run-vite-examples": "chmod +x ./scripts/run-vite-examples.sh && ./scripts/run-vite-examples.sh"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.7",
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "19.8.1",
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "9.39.1",
        "@jest/globals": "29.7.0",
        "@types/fs-extra": "11.0.4",
        "eslint": "9.39.1",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-import": "2.32.0",
        "eslint-plugin-local-rules": "3.0.2",
        "eslint-plugin-n": "17.23.1",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-promise": "7.2.1",
        "eslint-plugin-security": "3.0.1",
        "eslint-plugin-sonarjs": "3.0.5",
        "fs-extra": "11.3.1",
        "glob": "10.5.0",
        "globals": "15.15.0",
        "hardhat": "2.26.3",
        "husky": "9.1.7",
        "jest": "29.7.0",
        "jest-docblock": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-junit": "16.0.0",
        "jest-runner": "29.7.0",
        "jest-runner-groups": "2.2.0",
        "nyc": "17.1.0",
        "pkg": "5.8.1",
        "prettier": "3.7.3",
        "ts-jest": "29.4.1",
        "ts-node": "10.9.2",
        "tsup": "8.5.1",
        "turbo": "2.6.1",
        "typedoc": "0.26.11",
        "typedoc-plugin-missing-exports": "3.1.0",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.4"
    },
    "peerDependencies": {
        "hardhat": "2.26.3"
    },
    "resolutions": {
        "cross-spawn": "7.0.6",
        "undici": "5.29.0"
    },
    "version": "1.22.22"
}
