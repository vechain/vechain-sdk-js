{
    "name": "vechain-sdk",
    "description": "The official JavaScript SDK for vechain",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vechain/vechain-sdk.git"
    },
    "author": "VeChain Foundation",
    "license": "MIT",
    "keywords": [
        "VeChain",
        "thor",
        "sdk",
        "blockchain",
        "dapp",
        "web3"
    ],
    "private": true,
    "workspaces": [
        "packages/*",
        "docs",
        "apps/*"
    ],
    "packageManager": "yarn@1.22.22",
    "scripts": {
        "start-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-up",
        "stop-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-down",
        "seed-thor-solo": "yarn workspace @vechain/sdk-solo-setup solo-seed",
        "save-thor-solo-logs": "yarn workspace @vechain/sdk-solo-setup solo-logs-save",
        "postinstall": "husky",
        "build": "turbo build",
        "check:circular-dependencies": "turbo check:circular-dependencies",
        "pre-release": "ts-node scripts/pre-release.ts",
        "generate:apidocs": "typedoc --options typedoc.json --logLevel Error",
        "generate:apidocs-debug": "typedoc --options typedoc.json --logLevel Verbose --plugin typedoc-plugin-missing-exports --validation.notDocumented",
        "lint": "turbo lint",
        "format": "turbo format",
        "test:unit": "turbo test:unit",
        "test:integration": "turbo test:integration",
        "test:integration:solo": "(yarn start-thor-solo && yarn test:integration && yarn save-thor-solo-logs && yarn stop-thor-solo) || (yarn save-thor-solo-logs; yarn stop-thor-solo)",
        "test:examples": "turbo test:examples",
        "test:examples:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test:examples && yarn save-thor-solo-logs && yarn stop-thor-solo) || (yarn save-thor-solo-logs; yarn stop-thor-solo)",
        "test": "CI=true turbo test --force --concurrency=2 --continue",
        "test:browser": "turbo test:browser --force && yarn merge-coverage",
        "test:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test && yarn save-thor-solo-logs && yarn stop-thor-solo) || (yarn save-thor-solo-logs; yarn stop-thor-solo)",
        "test:browser:solo": "(yarn start-thor-solo && yarn seed-thor-solo && yarn test:browser && yarn save-thor-solo-logs && yarn stop-thor-solo) || (yarn save-thor-solo-logs; yarn stop-thor-solo)",
        "merge-coverage": "ts-node scripts/merge-coverage.ts",
        "check:tests-naming": "ts-node scripts/check-tests-naming.ts"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.7",
        "@commitlint/cli": "^19.4.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.18.0",
        "@jest/globals": "^29.7.0",
        "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
        "@nomicfoundation/hardhat-verify": "^2.1.1",
        "@types/chai": "^4.2.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.0.0",
        "chai": "^4.2.0",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-local-rules": "^3.0.2",
        "eslint-plugin-n": "^17.15.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-sonarjs": "^3.0.4",
        "ethers": "^6.14.0",
        "fs-extra": "^11.2.0",
        "glob": "^10.4.2",
        "globals": "^15.12.0",
        "hardhat": "^2.26.2",
        "hardhat-gas-reporter": "^1.0.8",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "jest-docblock": "^29",
        "jest-environment-jsdom": "^29.7.0",
        "jest-junit": "^16.0.0",
        "jest-runner": "^29.7.0",
        "jest-runner-groups": "^2.2.0",
        "nyc": "^17.1.0",
        "prettier": "^3.4.2",
        "solidity-coverage": "^0.8.1",
        "ts-jest": "^29.2.5",
        "tsup": "^8.3.0",
        "turbo": "^2.3.0",
        "typedoc": "^0.26.8",
        "typedoc-plugin-missing-exports": "^3.0.0",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.13.0"
    },
    "peerDependencies": {
        "hardhat": "^2.26.2"
    },
    "resolutions": {
        "cross-spawn": "^7.0.5",
        "elliptic": "^6.6.1",
        "ethers": "^6.14.0"
    },
    "version": "1.22.22"
}
