{
  "name": "docs",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "start-thor-solo": "echo 'Starting thor solo node ...\n' && docker compose up -d --wait && echo '\nThor solo node started'",
    "stop-thor-solo": "docker compose down && echo '\nThor solo node stopped'",
    "test:examples:no-solo": "ts-node-test examples/",
    "test:examples": "(yarn start-thor-solo && yarn test:examples:no-solo) && (yarn stop-thor-solo) || (yarn stop-thor-solo)",
    "build": "find . -name \"*.md\" -type f -maxdepth 1 ! -name \"README.md\" -delete && tsup ./build-scripts && node dist/builddocs.cjs"
  },
  "dependencies": {
    "@vechainfoundation/vechain-sdk-core": "*",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "expect": "^29.7.0",
    "ts-node-test": "^0.4.3"
  }
}
