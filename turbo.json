{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "check:circular-dependencies": {},
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^build"]
        },
        "test:unit": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^build"]
        },
        "test:browser": {
            "outputs": ["coverage/**"],
            "dependsOn": ["^build"]
        },
        "test:integration":{
            "outputs": ["coverage/**"],
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "format": {},
        "test:examples": {
            "dependsOn": ["^build"]
        }
    }
}
