{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "test:unit": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "format": {},
        "test:docs": {
            "dependsOn": ["^build"]
        },
        "test:examples": {
            "dependsOn": ["^build"]
        }
    }
}
